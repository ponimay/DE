<Window x:Class="DE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame Name="Mframe" NavigationUIVisibility="Hidden" ContentRendered="Mframe_ContentRendered" Grid.Row="1"/>
        <Canvas Background="Beige" Grid.Row="0"/>
        <TextBlock Name="TxtB" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="Back" Click="Back_Click" Margin="10" Background="ForestGreen" Foreground="#FFF" Width="150" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="0" Content="Назад"/>


    </Grid>
</Window>
