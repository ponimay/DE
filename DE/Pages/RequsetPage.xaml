<Page x:Class="DE.RequsetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RequsetPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Name="LV" Loaded="LV_Loaded" SelectionChanged="LV_SelectionChanged" HorizontalContentAlignment="Stretch" Grid.Row="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <StackPanel>
                            <DockPanel>
                                <TextBlock Text="{Binding PartnerType.PartnerRequestTypeTitle}" Margin="0 5"/>
                                <TextBlock Text=" | " Margin="0 5"/>
                                <TextBlock Text="{Binding PartnerTitle}" Margin="0 5"/>

                            </DockPanel>
                            <TextBlock Text="{Binding PartnerAdres}" Margin="0 5"/>
                            <TextBlock Text="{Binding PartnerPhone, StringFormat=+7 \{0\}}" Margin="0 5"/>
                            <TextBlock Text="{Binding PartnerRate, StringFormat=Рейтинг: \{0\}}" Margin="0 5"/>

                        </StackPanel>
                        <TextBlock Text="{Binding ProductCost, StringFormat=\{0\} Рублей}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 5"/>
                        <Button Name="Prod" Click="Prod_Click"  Margin="0,60,0,0" Background="ForestGreen" Foreground="#FFF" Width="150" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="0" Content="Продукция"/>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Name="Add" Click="Add_Click"  Margin="10" Background="ForestGreen" Foreground="#FFF" Width="150" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="0" Content="Добавить"/>
        </StackPanel>

    </Grid>
</Page>
